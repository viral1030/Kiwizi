<?xml version="1.0" encoding="UTF-8"?>
<suite name="Login" verbose="10" parallel="tests" thread-count="3">

	<!-- Put IP of localhost/Grid Hub machine -->
	<parameter name="selenium.host" value="localhost" />

	<!-- Put Port of localhost RC/Grid Hub machine -->
	<parameter name="selenium.port" value="4444" />

	<!-- Put target browser name as below: 1) Firefox : firefox 2) chrome : 
		chrome 3) IExplorer : ie8 / ie9 -->
	<parameter name="selenium.browser" value="firefox" />
	<parameter name="selenium.url"
		value="http://automation.zinghr.com/2015/pages/Authentication/login.aspx" />




	<listeners>

		<listener class-name="com.zinghr.utility.CustomReporter" />

	</listeners>


	<test name="login page verification">
		<classes>
			<class name="com.zinghr.login.index.LoginIndex">
				<methods>
					<include name="loginlandingpage" />
				</methods>
			</class>
		</classes>
	</test>


	<test name="L_08: To verify that user is able to login with valid credentials">
		<classes>
			<class name="com.zinghr.login.index.LoginIndex">
				<methods>
					<include name="loginwithvalidcredential" />
				</methods>
			</class>
		</classes>
	</test>

	<test name="L_02: To verify that Company Name field is editable">
		<classes>
			<class name="com.zinghr.login.index.LoginIndex">
				<methods>
					<include name="compnycodeeditableornot" />
				</methods>
			</class>
		</classes>
	</test>
	<test name="L_03: To verify that user is able to enter data in Employee code field">
		<classes>
			<class name="com.zinghr.login.index.LoginIndex">
				<methods>
					<include name="employeecodeeditableornot" />
				</methods>
			</class>
		</classes>
	</test>
	<test name="L_04: To verify that alert message is displayed if user logins with empty Company Code">
		<classes>
			<class name="com.zinghr.login.index.LoginIndex">
				<methods>
					<include name="blankcomponycode" />
				</methods>
			</class>
		</classes>
	</test>
	
	
	
	<test name="L_05: To verify that alert message is displayed if user logins with empty Employee Code">
		<classes>
			<class name="com.zinghr.login.index.LoginIndex">
				<methods>
					<include name="blankemployeecode" />
				</methods>
			</class>
		</classes>
	</test>
	
	<test name="L_06: To verify that user is able to enter data in Password field">
		<classes>
			<class name="com.zinghr.login.index.LoginIndex">
				<methods>
					<include name="enterdatatopassword" />
				</methods>
			</class>
		</classes>
	</test>
	
	<test name="L_07: To verify that alert message is displayed if user logins with empty password">
		<classes>
			<class name="com.zinghr.login.index.LoginIndex">
				<methods>
					<include name="blankpassword" />
				</methods>
			</class>
		</classes>
	</test>
	
	<test name="L_10: To verify that appropriate error message is displayed when user enters invalid company code">
		<classes>
			<class name="com.zinghr.login.index.LoginIndex">
				<methods>
					<include name="invalidcompanycode" />
				</methods>
			</class>
		</classes>
	</test>
	<test name="L_11: To verify that appropriate error message is displayed when user enters invalid company code">
		<classes>
			<class name="com.zinghr.login.index.LoginIndex">
				<methods>
					<include name="invalidemployeecode" />
				</methods>
			</class>
		</classes>
	</test>
	<test name="L_12: To verify that appropriate error message is displayed when user enters invalid password">
		<classes>
			<class name="com.zinghr.login.index.LoginIndex">
				<methods>
					<include name="invalidpassword" />
				</methods>
			</class>
		</classes>
	</test>
	<test name="L_16: To verify that user is redirected to targeted page after clicking on social icons(fb,twitter,g+,ln,youtube">
		<classes>
			<class name="com.zinghr.login.index.LoginIndex">
				<methods>
					<include name="verifysocialicons" />
				</methods>
			</class>
		</classes>
	</test>
</suite>